@page "/escuelas"

<style>
	.divpadre {
		height: 500px;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>

<PageTitle>Catálogo Escuelas</PageTitle>

<!--ENCABEZADO-->
